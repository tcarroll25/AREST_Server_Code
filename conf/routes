# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# User
GET     /user                       controllers.Application.users()
POST    /user                       controllers.Application.newUser()
POST    /user/:id/deleteID          controllers.Application.deleteUser(id: Long)
POST    /user/:name/delete          controllers.Application.deleteByUserName(name: String)
#GET     /user/:id/get              controllers.Application.getUser(id: Long)
GET     /user/:name/get             controllers.Application.getByUserName(name: String)
POST    /user/password              controllers.Application.checkPassword()
POST    /user/create                controllers.Application.createUser()

# Report
GET     /report                     controllers.Application.reports()
POST    /report                     controllers.Application.newReport()
POST    /report/:id/delete          controllers.Application.deleteReport(id: Long)
GET     /report/:id/get             controllers.Application.getReport(id: Long)
POST    /report/create              controllers.Application.createReport()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
